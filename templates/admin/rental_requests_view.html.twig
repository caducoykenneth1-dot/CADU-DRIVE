                                    <small class="text-muted">‚Ç±{{ dailyRate|number_format(2) }}/day</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="status-badge status-rejected">
                                    <i class="bi bi-x-circle"></i> Rejected
                                </span>
                            </td>
                            <td>
                                {% if request.rejectedAt %}
                                    <div class="submitted-date">{{ request.rejectedAt|date('M d, Y') }}</div>
                                    <small class="submitted-time">{{ request.rejectedAt|date('h:i A') }}</small>
