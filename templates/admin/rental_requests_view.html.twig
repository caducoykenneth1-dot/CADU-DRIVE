{# templates/admin/rental_requests/view.html.twig #}
{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Rental Requests - Admin View{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    <style>
        .rental-requests-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2.5rem 1.5rem;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            color: #1a1a1a;
            background: #fafafa;
        }
        
        .page-header {
            margin-bottom: 2.5rem;
        }
        
        .page-header h1 {
            font-size: 2rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
        }
        
        .page-subtitle {
            color: #6b7280;
            font-size: 0.9375rem;
            font-weight: 400;
            margin: 0;
        }
        
        .requests-section {
            margin-bottom: 3rem;
        }
        
        .section-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .section-header h2 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0;
            letter-spacing: -0.01em;
        }
        
        .badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.125rem 0.5rem;
            border-radius: 6px;
            font-size: 0.8125rem;
            font-weight: 500;
            min-width: 24px;
            height: 24px;
            background: #f3f4f6;
            color: #6b7280;
        }
        
        .badge-approved {
            background: #ecfdf5;
            color: #059669;
        }
        
        .badge-rejected {
            background: #fef2f2;
            color: #dc2626;
        }
        
        .requests-table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            border: 1px solid #e5e7eb;
            padding: 1.5rem;
        }
        
        /* DataTables Custom Styling */
        .dataTables_wrapper {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
        }
        
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter {
            margin-bottom: 1rem;
        }
        
        .dataTables_wrapper .dataTables_length select {
            padding: 0.375rem 2rem 0.375rem 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            font-size: 0.875rem;
            background: white;
            cursor: pointer;
        }
        
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.5rem 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            font-size: 0.875rem;
            margin-left: 0.5rem;
            width: 250px;
        }
        
        .dataTables_wrapper .dataTables_filter input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        
        table.dataTable {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.875rem;
        }
        
        table.dataTable thead th {
            background: #fafafa;
            text-align: left;
            padding: 0.875rem 1rem;
            font-weight: 500;
            font-size: 0.8125rem;
            color: #6b7280;
            border-bottom: 1px solid #e5e7eb;
            white-space: nowrap;
        }
        
        table.dataTable tbody td {
            padding: 1rem;
            border-bottom: 1px solid #f3f4f6;
            vertical-align: middle;
        }
        
        table.dataTable tbody tr:hover {
            background: #fafafa;
        }
        
        .dataTables_wrapper .dataTables_paginate {
            margin-top: 1.5rem;
            text-align: right;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.375rem 0.75rem;
            margin: 0 0.125rem;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            background: white;
            color: #6b7280;
            cursor: pointer;
            font-size: 0.875rem;
            transition: all 0.15s ease;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #f9fafb;
            border-color: #3b82f6;
            color: #3b82f6;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #3b82f6;
            border-color: #3b82f6;
            color: white;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .dataTables_wrapper .dataTables_info {
            padding-top: 1rem;
            font-size: 0.875rem;
            color: #6b7280;
        }
        
        .request-id {
            font-weight: 500;
            color: #3b82f6;
            font-size: 0.875rem;
        }
        
        .customer-name, .vehicle-name {
            font-weight: 500;
            color: black !important;
            margin-bottom: 0.125rem;
        }
        
        .customer-email, .vehicle-year, .date-days, .approved-date, .submitted-date, .submitted-time {
            font-size: 0.8125rem;
            color: #9ca3af;
            display: block;
            margin-top: 0.125rem;
        }
        
        .date-range {
            font-weight: 400;
            color: #1a1a1a;
            margin-bottom: 0.125rem;
        }
        
        .text-muted {
            color: #9ca3af;
        }
        
        .price-total {
            color: #059669;
            font-weight: 600;
            font-size: 0.9375rem;
            margin-bottom: 0.125rem;
        }
        
        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 500;
            gap: 0.375rem;
        }
        
        .status-pending {
            background: #fef3c7;
            color: orange !important;
        }
        
        .status-approved {
            background: #d1fae5;
            color: green !important;
        }
        
        .status-rejected {
            background: #fee2e2;
            color: red !important;
        }
        
        .action-buttons {
            display: flex;
            gap: 0.375rem;
            justify-content: flex-end;
        }
        
        .btn-view {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            font-size: 0.9375rem;
            background: white;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.15s ease;
            text-decoration: none;
        }
        
        .btn-view:hover {
            background: #f9fafb;
            border-color: #d1d5db;
            transform: translateY(-1px);
            color: #2563eb;
            border-color: #3b82f6;
        }
        
        .alert {
            border-radius: 8px;
            padding: 0.875rem 1rem;
            margin-bottom: 1.5rem;
            font-weight: 400;
            font-size: 0.875rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid;
        }
        
        .alert-success {
            background: #ecfdf5;
            color: #065f46;
            border-color: #a7f3d0;
        }
        
        .alert-error {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }
        
        .btn-close {
            background: transparent;
            border: none;
            font-size: 1.125rem;
            color: inherit;
            cursor: pointer;
            opacity: 0.5;
            transition: opacity 0.15s ease;
            padding: 0;
            line-height: 1;
        }
        
        .btn-close:hover {
            opacity: 1;
        }
        
        .empty-state {
            text-align: center;
            padding: 4rem 1rem;
            color: #9ca3af;
        }
        
        .empty-icon {
            font-size: 3rem;
            margin-bottom: 0.75rem;
            opacity: 0.3;
        }
        
        .empty-state p {
            font-size: 0.9375rem;
            margin: 0;
        }
        
        .admin-view-badge {
            display: inline-block;
            background: #3b82f6;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 500;
            margin-left: 0.5rem;
        }
        
        .read-only-note {
            background: #f8fafc;
            border-left: 4px solid #3b82f6;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border-radius: 0 4px 4px 0;
        }
        
        @media (max-width: 768px) {
            .rental-requests-container {
                padding: 1.5rem 1rem;
            }
            
            .page-header h1 {
                font-size: 1.5rem;
            }
            
            .dataTables_wrapper .dataTables_filter input {
                width: 100%;
                margin-left: 0;
                margin-top: 0.5rem;
            }
            
            .dataTables_wrapper .dataTables_length,
            .dataTables_wrapper .dataTables_filter,
            .dataTables_wrapper .dataTables_info,
            .dataTables_wrapper .dataTables_paginate {
                text-align: center;
            }
        }
    </style>
{% endblock %}

{% block admin_content %}
<a href="{{ path('app_walk_in_rental_history') }}" class="btn btn-secondary-clean" style="color: white !important;">
                <i class="fas fa-history me-2"></i>History
            </a>
<div class="rental-requests-container" role="main" aria-label="Rental Requests Management">
    <header class="page-header">
        <h1>Rental Requests <span class="admin-view-badge">Admin View Only</span></h1>
        <p class="page-subtitle">View all rental submissions (Read-only mode for administrators)</p>
    </header>
    
    <div class="read-only-note">
        <p><i class="bi bi-info-circle"></i> <strong>Note:</strong> This is a read-only view. Staff members manage approvals/rejections.</p>
    </div>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert" aria-live="polite">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">√ó</button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error alert-dismissible fade show" role="alert" aria-live="assertive">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">√ó</button>
        </div>
    {% endfor %}
    
    <section class="requests-section" aria-labelledby="pending-requests-header">
        <div class="section-header">
            <h2 id="pending-requests-header" style="color: black">Pending Review</h2>
            <span class="badge" aria-label="{{ pendingRequests|length }} pending requests">{{ pendingRequests|length }}</span>
        </div>
        
        {% if pendingRequests|length > 0 %}
            <div class="requests-table">
                <table id="pendingTable" class="display responsive nowrap" style="width:100%">
                    <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Customer</th>
                        <th>Vehicle</th>
                        <th>Dates</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for request in pendingRequests %}
                        <tr>
                            <td class="request-id">#{{ request.id }}</td>
                            <td>
                                {% if request.customer %}
                                    <div class="customer-name">{{ request.customer.firstName ~ ' ' ~ request.customer.lastName | trim ?: request.customer.email }}</div>
                                    <small class="customer-email">{{ request.customer.email }}</small>
                                {% else %}
                                    <span class="text-muted">No customer</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if request.car %}
                                    <div class="vehicle-name">{{ request.car.make }} {{ request.car.model }}</div>
                                    {% if request.car.year %}
                                        <small class="vehicle-year">{{ request.car.year }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">No vehicle</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="date-range">{{ request.startDate|date('M d, Y') }} ‚Äì {{ request.endDate|date('M d, Y') }}</div>
                                {% set daysDifference = date(request.endDate).diff(date(request.startDate)).days %}
                                <small class="date-days">{{ daysDifference + 1 }} days</small>
                            </td>
                            <td data-order="{{ (daysDifference + 1) * request.car.dailyRate|default(0) }}">
                                {% if request.car and request.startDate and request.endDate %}
                                    {% set totalDays = daysDifference + 1 %}
                                    {% set dailyRate = request.car.dailyRate|default(0) %}
                                    {% set calculatedTotal = totalDays * dailyRate %}
                                    <div class="price-total">‚Ç±{{ calculatedTotal|number_format(2) }}</div>
                                    <small class="text-muted">‚Ç±{{ dailyRate|number_format(2) }}/day</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="status-badge status-pending">
                                    <i class="bi bi-clock"></i> Pending
                                </span>
                                <small class="submitted-date">{{ request.createdAt|date('M d, Y') }}</small>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="{{ path('app_admin_rental_request_view', {'id': request.id}) }}" 
                                       class="btn-view" 
                                       title="View Details (Read-only)">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-icon">üì≠</div>
                <p>No pending rental requests</p>
            </div>
        {% endif %}
    </section>
    
    <section class="requests-section" aria-labelledby="approved-requests-header">
        <div class="section-header">
