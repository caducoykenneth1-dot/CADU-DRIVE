{# templates/admin/rental_requests/view_detail.html.twig #}
{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Rental Request #{{ rentalRequest.id }} - Admin View{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .detail-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
            background: #fafafa;
            min-height: 100vh;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #3b82f6;
            text-decoration: none;
            margin-bottom: 1.5rem;
            font-weight: 500;
        }
        
        .back-link:hover {
            text-decoration: underline;
        }
        
        .header-section {
            margin-bottom: 2rem;
        }
        
        .header-title {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 0.5rem;
        }
        
        .header-title h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0;
        }
        
        .admin-badge {
            background: #3b82f6;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .header-subtitle {
            color: #6b7280;
            font-size: 0.9375rem;
            margin: 0;
        }
        
        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .card {
            background: white;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            overflow: hidden;
        }
        
        .card-header {
            background: #f9fafb;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .card-header h2 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #f3f4f6;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 500;
            color: #4b5563;
            font-size: 0.875rem;
        }
        
        .info-value {
            color: #1a1a1a;
            font-weight: 500;
            text-align: right;
            max-width: 60%;
        }
        
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            padding: 0.375rem 0.75rem;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        
        .status-pending {
            background: #fef3c7;
            color: #92400e;
        }
        
        .status-approved {
            background: #d1fae5;
            color: #065f46;
        }
        
        .status-rejected {
            background: #fee2e2;
            color: #991b1b;
        }
        
        .price-large {
            font-size: 1.25rem;
            font-weight: 600;
            color: #059669;
        }
        
        .read-only-notice {
            background: #f0f9ff;
            border-left: 4px solid #3b82f6;
            padding: 1rem;
            margin-top: 2rem;
            border-radius: 0 4px 4px 0;
        }
        
        .read-only-notice p {
            margin: 0;
            color: #1e40af;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .empty-value {
            color: #9ca3af;
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            .detail-container {
                padding: 1.5rem 1rem;
            }
            
            .card-grid {
                grid-template-columns: 1fr;
            }
            
            .header-title h1 {
                font-size: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block admin_content %}
<div class="detail-container">
    <a href="{{ path('app_admin_rental_requests_view') }}" class="back-link">
        <i class="bi bi-arrow-left"></i> Back to Rental Requests
    </a>
    
    <div class="header-section">
        <div class="header-title">
            <h1>Rental Request #{{ rentalRequest.id }}</h1>
            <span class="admin-badge">Admin View Only</span>
        </div>
        <p class="header-subtitle">Detailed information about this rental submission</p>
    </div>
    
    <div class="card-grid">
        <!-- Customer Information Card -->
        <div class="card">
            <div class="card-header">
                <h2><i class="bi bi-person"></i> Customer Information</h2>
            </div>
            <div class="card-body">
                {% if rentalRequest.customer %}
                    <div class="info-row">
                        <span class="info-label">Full Name</span>
                        <span class="info-value">
                            {{ rentalRequest.customer.firstName }} {{ rentalRequest.customer.lastName }}
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Email</span>
                        <span class="info-value">{{ rentalRequest.customer.email }}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Phone</span>
                        <span class="info-value">
                            {{ rentalRequest.customer.phoneNumber|default('<span class="empty-value">Not provided</span>')|raw }}
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Customer ID</span>
                        <span class="info-value">#{{ rentalRequest.customer.id }}</span>
                    </div>
                {% else %}
                    <div class="info-row">
                        <span class="info-label">Customer</span>
                        <span class="info-value empty-value">No customer information available</span>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Vehicle Information Card -->
        <div class="card">
            <div class="card-header">
                <h2><i class="bi bi-car-front"></i> Vehicle Information</h2>
            </div>
            <div class="card-body">
                {% if rentalRequest.car %}
                    <div class="info-row">
                        <span class="info-label">Vehicle</span>
                        <span class="info-value">{{ rentalRequest.car.make }} {{ rentalRequest.car.model }}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Year</span>
                        <span class="info-value">{{ rentalRequest.car.year|default('<span class="empty-value">N/A</span>')|raw }}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">License Plate</span>
                        <span class="info-value">
                            {{ rentalRequest.car.licensePlate|default('<span class="empty-value">N/A</span>')|raw }}
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Daily Rate</span>
                        <span class="info-value">₱{{ rentalRequest.car.dailyRate|default(0)|number_format(2) }}</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Car ID</span>
                        <span class="info-value">#{{ rentalRequest.car.id }}</span>
                    </div>
                {% else %}
                    <div class="info-row">
                        <span class="info-label">Vehicle</span>
                        <span class="info-value empty-value">No vehicle information available</span>
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Rental Details Card -->
        <div class="card">
            <div class="card-header">
                <h2><i class="bi bi-calendar-event"></i> Rental Details</h2>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <span class="info-label">Start Date</span>
                    <span class="info-value">{{ rentalRequest.startDate|date('F d, Y') }}</span>
                </div>
                <div class="info-row">
                    <span class="info-label">End Date</span>
                    <span class="info-value">{{ rentalRequest.endDate|date('F d, Y') }}</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Duration</span>
                    {% set daysDifference = date(rentalRequest.endDate).diff(date(rentalRequest.startDate)).days %}
                    <span class="info-value">{{ daysDifference + 1 }} days</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Total Cost</span>
                    {% if rentalRequest.car and rentalRequest.startDate and rentalRequest.endDate %}
                        {% set totalDays = daysDifference + 1 %}
                        {% set dailyRate = rentalRequest.car.dailyRate|default(0) %}
                        {% set calculatedTotal = totalDays * dailyRate %}
                        <span class="info-value price-large">₱{{ calculatedTotal|number_format(2) }}</span>
                    {% else %}
                        <span class="info-value empty-value">Not available</span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Status & Timeline Card -->
        <div class="card">
            <div class="card-header">
                <h2><i class="bi bi-clock-history"></i> Status & Timeline</h2>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <span class="info-label">Current Status</span>
                    <span class="info-value">
                        {% if rentalRequest.status == 'pending' %}
                            <span class="status-badge status-pending">
                                <i class="bi bi-clock"></i> Pending
                            </span>
                        {% elseif rentalRequest.status == 'approved' %}
                            <span class="status-badge status-approved">
                                <i class="bi bi-check-circle"></i> Approved
                            </span>
                        {% elseif rentalRequest.status == 'rejected' %}
                            <span class="status-badge status-rejected">
                                <i class="bi bi-x-circle"></i> Rejected
                            </span>
                        {% endif %}
                    </span>
                            </div>
                                    <div class="info-row">
                                        <span class="info-label">Submitted On</span>
                                        <span class="info-value">{{ rentalRequest.createdAt|date('F d, Y h:i A') }}</span>
                                    </div>
                                    
                                {% if rentalRequest.status == 'approved' and rentalRequest.approvedAt %}
                        <div class="info-row">
                            <span class="info-label">Approved On</span>
                            <span class="info-value">{{ rentalRequest.approvedAt|date('F d, Y h:i A') }}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Approved By</span>
                            {% if rentalRequest.approvedBy %}
                                <span class="info-value">{{ rentalRequest.approvedBy.email }}</span>
                            {% else %}
                                <span class="info-value empty-value">Not recorded</span>
                            {% endif %}
                        </div>
                    {% endif %}

                    {% if rentalRequest.status == 'rejected' and rentalRequest.rejectedAt %}
                        <div class="info-row">
                            <span class="info-label">Rejected On</span>
                            <span class="info-value">{{ rentalRequest.rejectedAt|date('F d, Y h:i A') }}</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Rejected By</span>
                            {% if rentalRequest.rejectedBy %}
                                <span class="info-value">{{ rentalRequest.rejectedBy.email }}</span>
                            {% else %}
                                <span class="info-value empty-value">Not recorded</span>
                            {% endif %}
                        </div>
                    {% endif %}
                
                <div class="info-row">
                    <span class="info-label">Last Updated</span>
                    <span class="info-value">{{ rentalRequest.updatedAt|date('F d, Y h:i A') }}</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="read-only-notice">
        <p><i class="bi bi-shield-lock"></i> This is a read-only view for administrators. Staff members handle rental request management.</p>
    </div>
</div>
{% endblock %}