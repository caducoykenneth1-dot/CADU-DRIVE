    <body class="bg-gray-900 text-gray-300">
            {# Determine if we are in admin context based on route name #}
        {% set __current_route = app.request.attributes.get('_route') ?? '' %}
        {% set __is_admin_context = __current_route starts with 'app_admin_' %}
            {# Navigation Bar - only show if not in admin context #}
        {% if not __is_admin_context %}
            <header>
                <nav id="main-nav" class="fixed top-0 left-0 right-0 z-30 transition-all duration-300 ease-in-out">
                    <div class="container mx-auto flex items-center justify-between p-4">
                        <!-- Logo -->
                        <div>
                            <a class="text-white flex items-center" href="{{ path('app_home') }}">
                                <img src="{{ asset('images/cadudriving_brandblue.png') }}" alt="Cadu Driving" style="height: 2.6rem; width: auto;">
                            </a>
                        </div>

                        <!-- Desktop Menu -->
                        <div class="hidden lg:flex items-center space-x-8">
                            <a href="{{ path('app_home') }}" class="nav-link">Home</a>
                            <a href="{{ path('app_about') }}" class="nav-link">About</a>
                            <a href="{{ path('app_car_index') }}" class="nav-link">Cars</a>
                            <a href="{{ path('app_contact') }}" class="nav-link">Contact</a>
                            <a href="{{ path('app_customer_register') }}" class="nav-link">Register</a>
                            <a href="{{ path('app_car_index') }}" class="btn">Book a Ride</a>
                            <a href="{{ path('app_admin_dashboard') }}" class="btn">Admin Panel</a>
                            
                        </div>

                        <!-- Mobile Menu Button -->
                        <div class="lg:hidden">
                            <button id="mobile-menu-button" class="text-white focus:outline-none" aria-label="Open navigation">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                            </button>
                        </div>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="drawer-overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden"></div>
                    <nav id="mobile-menu" class="mobile-drawer lg:hidden" aria-hidden="true">
                        <button id="mobile-menu-close" class="drawer-close" aria-label="Close navigation">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                        <a href="{{ path('app_home') }}" class="drawer-link">Home</a>
                        <a href="{{ path('app_about') }}" class="drawer-link">About</a>
                        <a href="{{ path('app_car_index') }}" class="drawer-link">Cars</a>
                        <a href="{{ path('app_contact') }}" class="drawer-link">Contact</a>
                        <a href="{{ path('app_customer_register') }}" class="drawer-link">Register</a>
                        <a href="{{ path('app_admin_dashboard') }}" class="btn mt-4 w-full text-center">Admin Panel</a>
                        <a href="{{ path('app_car_index') }}" class="btn mt-4 w-full text-center">Book a Ride</a>
                    </nav>
                </nav>
            </header>
        {% endif %}

        {% block body_full_width %}{% endblock %}

        <main role="main" class="{{ __is_admin_context ? 'mt-0 w-full' : 'container mx-auto mt-4' }}">
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
          
            
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                // Generic SweetAlert for confirmation dialogs
                function setupConfirmationModals() {
                    document.body.addEventListener('click', function(e) {
                        const trigger = e.target.closest('.confirm-delete-btn');
                        if (!trigger) return;

                        e.preventDefault();
                        const form = trigger.closest('form');
                        if (!form) return;

                        Swal.fire({
                            title: trigger.dataset.confirmTitle || 'Are you sure?',
                            text: trigger.dataset.confirmText || "This action cannot be undone!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#e74c3c',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: trigger.dataset.confirmButton || 'Yes, do it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                            }
                        });
                    });
                }

                // SweetAlert for rent confirmation
                function confirmRent(rentUrl, carName) {
                    Swal.fire({
                        title: 'Confirm Rental',
                        text: `Are you sure you want to rent the ${carName}?`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#10b981', // Matches .btn-rent color
                        cancelButtonColor: '#374151',  // Matches .btn-back color
                        confirmButtonText: 'Yes, rent it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = rentUrl;
                        }
                    });
                }

                // Navbar scroll and mobile toggle
                const mainNav = document.getElementById('main-nav');
                const mobileMenuButton = document.getElementById('mobile-menu-button');
                const mobileMenu = document.getElementById('mobile-menu');
                const mobileMenuClose = document.getElementById('mobile-menu-close');
                const drawerOverlay = document.getElementById('drawer-overlay');

                if (mainNav) {
                    window.addEventListener('scroll', () => {
                        if (window.scrollY > 50) {
                            mainNav.classList.add('scrolled');
                        } else {
                            mainNav.classList.remove('scrolled');
                        }
                    });
                }
                // Mobile menu toggle
                if (mobileMenuButton && mobileMenu && mobileMenuClose && drawerOverlay) {
                    const closeDrawer = () => {
                        mobileMenu.classList.remove('open');
                        drawerOverlay.classList.add('hidden');
                        mobileMenu.setAttribute('aria-hidden', 'true');
                        document.body.classList.remove('overflow-hidden');
                    };
                    
                    const openDrawer = () => {
                        mobileMenu.classList.add('open');
                        drawerOverlay.classList.remove('hidden');
                        mobileMenu.setAttribute('aria-hidden', 'false');
                        document.body.classList.add('overflow-hidden');
                    };

                    mobileMenuButton.addEventListener('click', openDrawer);
                    mobileMenuClose.addEventListener('click', closeDrawer);
                    drawerOverlay.addEventListener('click', closeDrawer);
                    mobileMenu.querySelectorAll('a').forEach((link) => {
                        link.addEventListener('click', closeDrawer);
                    });
                }

                document.addEventListener('DOMContentLoaded', setupConfirmationModals);
            </script>
        {% endblock %}
    </body>
</html>
