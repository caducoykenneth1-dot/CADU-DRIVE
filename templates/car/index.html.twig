{% extends 'base.html.twig' %}

{% block title %}Car Index{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0 text-center w-100">Our Fleet</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_car_new') }}" class="btn btn-primary">Create New Car</a>
            <a href="{{ path('app_rental_index') }}" class="btn btn-outline-light">Rental History</a>
        </div>
    </div>

    <div class="car-grid">
        {% for car in cars %}
            <div class="car-card">
              {% if car.image %}
    <img src="{{ asset('images/' ~ car.image) }}" alt="{{ car.make }} {{ car.model }}">
{% else %}
    <img src="https://placehold.co/600x400/1f2937/adb5bd?text={{ car.make|escape('url') }}" alt="Car Image">
{% endif %}


                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title">{{ car.make }} {{ car.model }}</h5>
                        <span class="badge {{ car.status|lower == 'available' ? 'bg-success' : 'bg-danger' }}">
                            {{ car.status }}
                        </span>
                    </div>

                    <p class="card-price">${{ car.price }}<span>/day</span></p>
                    <p class="small"><strong>Year:</strong> {{ car.year }}</p>
                    <p class="description">{{ car.description|default('No description')|slice(0, 80) ~ '...' }}</p>

                    <div class="card-actions mt-3 d-flex flex-wrap gap-2">
                        <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-sm btn-outline-light flex-grow-1">Details</a>
                        <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-sm btn-outline-secondary flex-grow-1">Edit</a>
                        {{ include('car/_delete_form.html.twig', { car: car }) }}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center mt-5">No cars available yet. <a href="{{ path('app_car_new') }}">Add one now</a>.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
