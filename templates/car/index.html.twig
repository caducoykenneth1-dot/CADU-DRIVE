{% extends 'base.html.twig' %}

{% block title %}Car Index{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title mb-0">Our Fleet</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_car_new') }}" class="btn btn-primary">Create New Car</a>
            <a href="{{ path('app_rental_index') }}" class="btn btn-outline-light">Rental History</a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for car in cars %}
            <div class="col">
                <div class="car-card h-100">
                    <img src="https://placehold.co/600x400/1f2937/adb5bd?text={{ car.make|escape('url') }}" class="card-img-top" alt="{{ car.make }} {{ car.model }}">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="card-title">{{ car.make }} {{ car.model }}</h5>
                            <span class="badge rounded-pill 
                                {% if car.status|lower == 'available' %}bg-success{% else %}bg-danger{% endif %}">
                                {{ car.status }}
                            </span>
                        </div>
                        <p class="card-text text-primary fw-bold fs-5 mb-2">${{ car.price }}<small class="text-gray fw-normal">/day</small></p>
                        <p class="card-text small text-gray mb-3"><strong>Year:</strong> {{ car.year }}</p>
                        <p class="card-text small text-gray flex-grow-1">{{ car.description|slice(0, 100) ~ '...' }}</p>
                        
                        <div class="d-flex flex-wrap gap-2 mt-3">
                            <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-sm btn-outline-light flex-grow-1">Details</a>
                            <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-sm btn-outline-secondary flex-grow-1">Edit</a>
                            
                            {% if car.status|lower == 'available' %}
                                <a href="{{ path('app_car_rent', {'id': car.id}) }}" class="btn btn-sm btn-primary flex-grow-1">Rent Now</a>
                            {% else %}
                                <button class="btn btn-sm btn-secondary flex-grow-1" disabled>Rented</button>
                            {% endif %}
                            
                            {{ include('car/_delete_form.html.twig', { 'button_class': 'btn-sm btn-outline-danger flex-grow-1' }) }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="text-center p-5 rounded" style="background-color: var(--bg-dark-secondary);">
                    <p class="mb-0">No cars found in the fleet. <a href="{{ path('app_car_new') }}" class="text-primary">Add the first one!</a></p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}