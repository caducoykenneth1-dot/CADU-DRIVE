{{ form_start(form, { attr: { class: 'customer-form space-y-6' } }) }}
    <div class="grid md:grid-cols-2 gap-5">
        {{ form_row(form.firstName, { attr: { class: 'form-control' } }) }}
        {{ form_row(form.lastName, { attr: { class: 'form-control' } }) }}
    </div>
    <div class="grid md:grid-cols-2 gap-5">
        {{ form_row(form.email, { attr: { class: 'form-control' } }) }}
        {{ form_row(form.phone, { attr: { class: 'form-control' } }) }}
    </div>
    {{ form_row(form.licenseNumber, { attr: { class: 'form-control' } }) }}
    <div>
        {{ form_row(form.notes, { attr: { class: 'form-control form-control-textarea', rows: 5 } }) }}
    </div>
    <div class="flex justify-end gap-3">
        <a href="{{ back_path|default(path('app_customer_index')) }}" class="btn btn-secondary">Cancel</a>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
