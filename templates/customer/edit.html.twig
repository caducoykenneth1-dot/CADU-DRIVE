{% extends 'base.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
    <section class="customer-section max-w-3xl mx-auto space-y-6">
        <div class="customer-toolbar justify-between">
            <div>
                <p class="eyebrow">Update Profile</p>
                <h1 class="page-title mb-1">{{ customer.displayName }}</h1>
            
            </div>
            
            <div class="flex gap-3 flex-wrap items-start">
                <a href="{{ path('app_customer_index') }}" class="section-link customer-back-link">
                    <span class="bi bi-people"></span>
                    Back to Profiles
                </a>
            </div>
        </div>

        

        <div class="customer-card">
            {% include 'customer/_form.html.twig' with {
                form: form,
                button_label: 'Update',
                back_path: path('app_customer_index')
            } %}
        </div>
    </section>
{% endblock %}
