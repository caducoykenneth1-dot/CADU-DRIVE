{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css">
{% endblock %}

{% block body %}
    <section class="customer-section space-y-6">
        {% for message in app.flashes('success') %}
            <div class="alert-success">{{ message }}</div>
        {% endfor %}

        <div class="customer-toolbar">
            <div>
                <p class="eyebrow">Customer Directory</p>
                <h1 class="page-title mb-1">Profiles</h1>

            </div>
            <div class="flex gap-3 flex-wrap">
               <a href="{{ path('app_admin_dashboard') }}" class="btn">Back to Dashboard</a>
            </div>
        </div>

        <div class="customer-table">
            <table id="customerTable" class="display text-white w-full">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>License</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for customer in customers %}
                        <tr>
                            <td>
                                <a href="{{ path('app_customer_show', {'id': customer.id}) }}" class="customer-name">
                                    {{ customer.displayName }}
                                </a>
                                <span class="customer-created">Joined {{ customer.createdAt|date('M d, Y') }}</span>
                            </td>
                            <td>{{ customer.email }}</td>
                            <td>{{ customer.phone|default('N/A') }}</td>
                            <td>
                                {% if customer.licenseNumber %}
                                    <span class="tag">{{ customer.licenseNumber }}</span>
                                {% else %}
                                    <span class="tag tag-muted">Not provided</span>
                                {% endif %}
                            </td>
                            <td class="text-right">
                                <div class="customer-actions">
                                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="customer-action customer-action-edit" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form action="{{ path('app_customer_delete', {'id': customer.id}) }}" method="post" class="customer-delete-form" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                        <button type="button"
                                                class="customer-action customer-action-delete confirm-delete-btn"
                                                title="Delete"
                                                data-confirm-title="Delete this customer?"
                                                data-confirm-text="Are you sure you want to delete {{ customer.displayName }}? This action cannot be undone."
                                                data-confirm-button="Yes, Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                  </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="empty-state">
                                <h3>No customers found</h3>
                                <p>Create a profile to start tracking renter details.</p>
                                <a class="btn btn-primary mt-3" href="{{ path('app_customer_register') }}">Invite customers to register</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            const $table = $('#customerTable');
            if ($table.length === 0) return;

            $table.DataTable({
                pageLength: 10,
                order: [[0, 'asc']],
                language: {
                    search: 'Search Customer',
                    lengthMenu: 'Show _MENU_ entries per page',
                    info: 'Showing _START_ to _END_ of _TOTAL_ customers',
                    paginate: {
                        previous: 'Prev',
                        next: 'Next'
                    },
                    emptyTable: 'No Customers Found'
                }
            });
        });
    </script>
{% endblock %}
