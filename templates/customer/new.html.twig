{% extends 'base.html.twig' %}

{% block title %}New Customer{% endblock %}

{% block body %}
    <section class="customer-section max-w-3xl mx-auto space-y-6">
        <div class="customer-hero">
            <div>
                <p class="eyebrow">New Profile</p>
                <h1 class="page-title mb-1">Create Customer</h1>
                <p class="text-gray-400 text-sm">Capture renter contact information before creating bookings.</p>
            </div>
            <a href="{{ path('app_customer_index') }}" class="btn btn-secondary">Back to List</a>
        </div>

        <div class="customer-card">
            {% include 'customer/_form.html.twig' with {
                form: form,
                button_label: 'Create',
                back_path: path('app_customer_index')
            } %}
        </div>
    </section>
{% endblock %}
