{% extends 'base.html.twig' %}

{% block title %}{{ customer.displayName }} - Customer Profile{% endblock %}

{% block body %}
    <section class="customer-section space-y-8">
        <!-- Header -->
        <div class="customer-toolbar">
            <div class="text-center mb-8">
                <p class="eyebrow">CUSTOMER PROFILE</p>
                <h1 class="page-title mb-2">{{ customer.displayName|default(customer.firstName ~ ' ' ~ customer.lastName) }}</h1>
                <p class="text-gray-400 text-lg">Customer ID: #{{ customer.id }}</p>
            </div>
            <div class="flex justify-center gap-4 flex-wrap">
                {#x` <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-warning text-lg px-6 py-3">Edit Profile</a> #}
                <a href="{{ path('app_customer_index') }}" class="btn text-lg px-6 py-3">Back to Customers</a>
            </div>
        </div>

        {% if app.flashes('success') %}
            {% for message in app.flashes('success') %}
                <div class="alert-success max-w-2xl mx-auto text-lg">{{ message }}</div>
            {% endfor %}
        {% endif %}

        <!-- Main Content -->
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                {# Main Info Card #}
                <div class="lg:col-span-2">
                    <div class="customer-card">
                        <h2 class="section-title mb-6">ðŸ“‹ PERSONAL INFORMATION</h2>
                        
                        <div class="space-y-8">
                            <!-- Name Section -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                                <div>
                                    <div class="field-label">FIRST NAME</div>
                                    <div class="field-divider"></div>
                                    <p class="field-value">{{ customer.firstName }}</p>
                                </div>
                                <div>
                                    <div class="field-label">LAST NAME</div>
                                    <div class="field-divider"></div>
                                    <p class="field-value">{{ customer.lastName }}</p>
                                </div>
                            </div>

                            <!-- Contact Section -->
                            <div>
                                <div class="field-label">EMAIL ADDRESS</div>
                                <div class="field-divider"></div>
                                <a href="mailto:{{ customer.email }}" class="field-value-link">{{ customer.email }}</a>
                            </div>

                            <div>
                                <div class="field-label">PHONE NUMBER</div>
                                <div class="field-divider"></div>
                                <p class="field-value">{{ customer.phone|default('Not provided') }}</p>
                            </div>

                            {% if customer.licenseNumber %}
                                <div>
                                    <div class="field-label">DRIVER'S LICENSE NUMBER</div>
                                    <div class="field-divider"></div>
                                    <p class="field-value font-mono bg-gray-800 px-4 py-3 rounded-lg">{{ customer.licenseNumber }}</p>
                                </div>
                            {% endif %}

                            {% if customer.notes %}
                                <div>
                                    <div class="field-label">ADDITIONAL NOTES</div>
                                    <div class="field-divider"></div>
                                    <div class="notes-box">{{ customer.notes }}</div>
                                </div>
                            {% endif %}

                            <!-- Dates Section -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8 border-t border-gray-700">
                                <div>
                                    <div class="field-label">JOINED DATE</div>
                                    <div class="field-divider"></div>
                                    <p class="field-value">{{ customer.createdAt|date('F j, Y') }}</p>
                                </div>
                                <div>
                                    <div class="field-label">LAST UPDATED</div>
                                    <div class="field-divider"></div>
                                    <p class="field-value">{{ customer.updatedAt ? customer.updatedAt|date('F j, Y â€¢ g:i A') : 'Never updated' }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Stats Sidebar #}
                <div>
                    <div class="customer-card">
                        <h2 class="section-title mb-6">ðŸ“Š ACTIVITY SUMMARY</h2>
                        
                        <div class="space-y-6">
                            <!-- Stats Cards -->
                            <div class="stat-card">
                                <div class="stat-label">TOTAL RENTALS</div>
                                <div class="stat-divider"></div>
                                <div class="stat-value text-blue-400">{{ customer.rentalRequests.count }}</div>
                            </div>

                            {% if customer.rentalRequests.count > 0 %}
                                <div class="stat-card">
                                    <div class="stat-label">ACTIVE RENTALS</div>
                                    <div class="stat-divider"></div>
                                    {% set activeCount = 0 %}
                                    {% for rental in customer.rentalRequests %}
                                        {% if rental.status == 'active' %}
                                            {% set activeCount = activeCount + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    <div class="stat-value text-green-400">{{ activeCount }}</div>
                                </div>
                            {% endif %}

                            <!-- Quick Actions -->
                           
                        </div>
                    </div>
                </div>
            </div>

            {# Rental History #}
            <div class="mt-10">
                <div class="customer-card">
                    <h2 class="section-title mb-6">ðŸš— RENTAL HISTORY</h2>
                    
                    {% if customer.rentalRequests.count > 0 %}
                        <div class="overflow-x-auto">
                            <table class="w-full text-base">
                                <thead>
                                    <tr>
                                        <th class="table-header">VEHICLE</th>
                                        <th class="table-header">RENTAL PERIOD</th>
                                        <th class="table-header">STATUS</th>
                                        <th class="table-header text-right">ACTION</th>
                                    </tr>
                                    <tr><td colspan="4"><div class="table-divider"></div></td></tr>
                                </thead>
                                <tbody>
                                    {% for rental in customer.rentalRequests|reverse %}
                                        <tr class="table-row">
                                            <td class="table-cell">
                                                {% if rental.car %}
                                                    <div class="font-semibold text-gray-100 text-lg">{{ rental.car.make }} {{ rental.car.model }}</div>
                                                    <div class="text-gray-400">{{ rental.car.year }} â€¢ {{ rental.car.plateNumber|default('No plate') }}</div>
                                                {% else %}
                                                    <div class="font-semibold text-gray-100 text-lg">Vehicle not specified</div>
                                                {% endif %}
                                            </td>
                                            <td class="table-cell">
                                                <div class="font-semibold text-gray-100">{{ rental.startDate|date('M d, Y') }} â†’ {{ rental.endDate|date('M d, Y') }}</div>
                                                <div class="text-gray-400">{{ rental.startDate ? rental.startDate.diff(rental.endDate).days + 1 : 0 }} </div>
                                            </td>
                                            <td class="table-cell">
                                                {% if rental.status == 'completed' %}
                                                    <span class="status-badge status-completed">COMPLETED</span>
                                                {% elseif rental.status == 'active' %}
                                                    <span class="status-badge status-active">ACTIVE</span>
                                                {% elseif rental.status == 'cancelled' %}
                                                    <span class="status-badge status-cancelled">CANCELLED</span>
                                                {% elseif rental.status == 'pending' %}
                                                    <span class="status-badge status-pending">PENDING</span>
                                                {% else %}
                                                    <span class="status-badge">{{ rental.status|upper }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="table-cell text-right">
                                                {% if rental.id %}
                                                    <a href="{{ path('app_rental_show', {'id': rental.id}) }}" class="action-link">VIEW DETAILS â†’</a>
                                                {% else %}
                                                    <span class="text-gray-500">N/A</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        {% if not loop.last %}
                                            <tr><td colspan="4"><div class="row-divider"></div></td></tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <div class="empty-icon">ðŸš—</div>
                            <p class="empty-text">No rental history recorded yet.</p>
                            <p class="empty-subtext">This customer has not made any rental requests.</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Action Buttons #}
            {# <div class="action-bar mt-10"> 
                <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="action-btn action-btn-warning">
                    <i class="bi bi-pencil-square mr-3"></i> EDIT PROFILE
                 </a> #}
                 <a href="{{ path('app_customer_index') }}" class="action-btn action-btn-secondary"> 
                    <i class="bi bi-arrow-left mr-3"></i> BACK TO LIST
                 </a>   
                {# <form action="{{ path('app_customer_delete', {'id': customer.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this customer profile? This action cannot be undone.');"> 
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                    <button type="submit" class="action-btn action-btn-danger">
                         <i class="bi bi-trash mr-3"></i> DELETE PROFILE #}
                    </button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

