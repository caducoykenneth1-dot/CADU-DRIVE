{% extends 'base.html.twig' %}

{% block title %}Change Password - Customer{% endblock %}

{% block body %}
<style>
    .container {
        max-width: 480px;
        margin: 3rem auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #2c3e50;
    }
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(33, 37, 41, 0.1);
        background: #ffffff;
    }
    .card-header {
        padding: 2rem 2.5rem 1rem;
        border-bottom: none;
        text-align: center;
    }
    .card-header h4 {
        font-weight: 700;
        font-size: 1.75rem;
        color: #34495e;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    .card-header p {
        color: #7f8c8d;
        font-weight: 500;
        font-size: 0.9rem;
        margin: 0;
    }
    .card-body {
        padding: 2rem 2.5rem 3rem;
    }
    .form-label {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    .form-control {
        border: 1.5px solid #ced4da;
        border-radius: 6px;
        padding: 0.6rem 0.85rem;
        font-size: 1rem;
        transition: border-color 0.25s ease, box-shadow 0.25s ease;
    }
    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 8px rgba(52, 152, 219, 0.4);
        outline: none;
    }
    .form-text {
        font-size: 0.8rem;
        color: #95a5a6;
        margin-top: 0.25rem;
    }
    .form-error {
        color: #e74c3c;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }
    .alert {
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    button.btn-close {
        margin-left: auto;
        background: transparent;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        color: inherit;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }
    button.btn-close:hover {
        opacity: 1;
    }
    .d-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-top: 2rem;
    }
    .btn-primary {
        background-color: #3498db;
        border: none;
        font-weight: 700;
        font-size: 1rem;
        border-radius: 8px;
        padding: 0.65rem 0;
        color: white;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    .btn-primary:hover {
        background-color: #2c80b4;
        color: #fff;
    }
    .btn-outline-secondary {
        border: 2px solid #bdc3c7;
        color: #7f8c8d;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 8px;
        padding: 0.6rem 0;
        background: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: background-color 0.3s ease, color 0.3s ease;
        text-decoration: none;
        cursor: pointer;
    }
    .btn-outline-secondary:hover {
        background-color: #bdc3c7;
        color: #2c3e50;
        text-decoration: none;
    }
    .bi {
        font-size: 1.2rem;
        vertical-align: middle;
    }
    @media (max-width: 480px) {
        .d-grid {
            grid-template-columns: 1fr;
        }
        .btn-primary, .btn-outline-secondary {
            font-size: 1.1rem;
        }
    }
</style>

<div class="container">
    <div class="card" role="main">
        <div class="card-header">
            <h4 style="color: white !important;">
                <i class="bi bi-key"></i> Change Password
            </h4>
            <p>Customer Account</p>
        </div>
        <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <div class="mb-3">
                {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.currentPassword, {'attr': {'class': 'form-error'}}) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.newPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.newPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.newPassword, {'attr': {'class': 'form-error'}}) }}
                <div class="form-text">Password must be at least 8 characters long.</div>
            </div>
            
            <div class="mb-4">
                {{ form_label(form.confirmPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.confirmPassword, {'attr': {'class': 'form-error'}}) }}
            </div>
            
            <div class="d-grid gap-2">
                <button type="submit" class="btn-primary">
                    <i class="bi bi-check-circle"></i> Change Password
                </button>
                <a href="{{ path('app_customer_my_profile') }}" class="btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}