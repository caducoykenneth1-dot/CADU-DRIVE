{# templates/customer/my_profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<style>
    .profile-card, .rental-card {
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
        background: #fff;
    }
    .profile-header, .rental-header {
        border-bottom: 1px solid #eaeaea;
        padding: 1rem 1.5rem;
        font-weight: 600;
        color: #333;
        font-size: 1.25rem;
    }
    .profile-body, .rental-body {
        padding: 1.5rem;
        font-size: 0.95rem;
        color: #444;
    }
    .field-label {
        font-weight: 600;
        margin-bottom: 0.3rem;
        color: #555;
        display: block;
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        font-weight: 600;
        transition: background-color 0.3s ease;
        text-decoration: none;
        color: white;
        display: inline-block;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        color: white;
    }
    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        background: transparent;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
        color: #333;
    }
    thead tr {
        background-color: #f8f9fa;
    }
    thead th {
        padding: 0.75rem 1rem;
        text-align: left;
        border-bottom: 2px solid #dee2e6;
    }
    tbody td {
        padding: 0.75rem 1rem;
        border-bottom: 1px solid #e9ecef;
        vertical-align: middle;
    }
    .badge {
        padding: 0.25em 0.6em;
        font-size: 0.75em;
        font-weight: 600;
        border-radius: 0.35rem;
        text-transform: capitalize;
    }
    .badge.bg-success { background-color: #198754; color: #fff; }
    .badge.bg-warning { background-color: #ffc107; color: #212529; }
    .badge.bg-danger  { background-color: #dc3545; color: #fff; }
    .badge.bg-secondary { background-color: #6c757d; color: #fff; }
    .alert {
        border-radius: 6px;
        padding: 0.75rem 1rem;
    }
    .container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 1rem;
    }
    .d-grid {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    @media (max-width: 767px) {
        .row {
            display: block;
        }
        .col-md-4, .col-md-8 {
            width: 100%;
            margin-bottom: 1.5rem;
        }
        .d-grid {
            flex-direction: column;
        }
        .btn-primary, .btn-outline-secondary {
            width: 100%;
            text-align: center;
        }
    }
</style>

<div class="container">
{# Add this inside the container div, e.g. above or below the profile and rental cards #}
<a href="/" class="btn-outline-secondary mt-3" style="display: inline-block;">&larr; Go Back to Site</a>
    {% for type in ['success', 'error'] %}
        {% for message in app.flashes(type) %}
            <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }} alert-dismissible fade show mb-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="row d-flex flex-wrap">
        <div class="col-md-4">
            <div class="profile-card">
                <div class="profile-header">Profile</div>
                <div class="profile-body">
                    <div>
                        <span class="field-label">Name</span>
                        <div>{{ customer.firstName }} {{ customer.lastName }}</div>
                    </div>
                    <div>
                        <span class="field-label">Email</span>
                        <div>{{ customer.email }}</div>
                    </div>
                    {% if customer.phone %}
                    <div>
                        <span class="field-label">Phone</span>
                        <div>{{ customer.phone }}</div>
                    </div>
                    {% endif %}
                    {% if customer.licenseNumber %}
                    <div>
                        <span class="field-label">License Number</span>
                        <div>{{ customer.licenseNumber }}</div>
                    </div>
                    {% endif %}
                    <div>
                        <span class="field-label">Member Since</span>
                        <div>{{ customer.createdAt ? customer.createdAt|date('Y-m-d') : 'N/A' }}</div>
                    </div>
                    <div class="d-grid mt-3">
                        {% if customer %}
                            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn-primary">Edit Profile</a>
                            {# Add this Logout button inside the container div, for example below the existing buttons in the profile section #}
                            <a href="{{ path('app_logout') }}" class="btn-outline-secondary mt-3" style="display: inline-block;">Logout</a>
                        {% endif %}
                        <a href="{{ path('app_customer_change_password') }}" class="btn-outline-secondary">Change Password</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="rental-card">
                <div class="rental-header d-flex justify-content-between align-items-center">
                    <span>My Rental Requests</span>
                    <a href="{{ path('app_car_index') }}" class="btn-primary btn-sm" style="font-size:0.85rem; padding: 0.25rem 0.75rem;">Rent a Car</a>
                </div>
                <div class="rental-body">
                    {% if rental_requests|length > 0 %}
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Car</th>
                                    <th>Dates</th>
                                    <th>Status</th>
                                    <th>Requested</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rental in rental_requests %}
                                <tr>
                                    <td>{{ rental.car ? rental.car.make ~ ' ' ~ rental.car.model : 'N/A' }}</td>
                                    <td>
                                        {% if rental.startDate and rental.endDate %}
                                            {{ rental.startDate|date('M d') }} - {{ rental.endDate|date('M d, Y') }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% set status = rental.status %}
                                        {% if status == 'approved' %}
                                            <span class="badge bg-success">Approved</span>
                                        {% elseif status == 'pending' %}
                                            <span class="badge bg-warning">Pending</span>
                                        {% elseif status == 'rejected' %}
                                            <span class="badge bg-danger">Rejected</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ rental.createdAt ? rental.createdAt|date('Y-m-d') : '-' }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center py-4" style="color: #888;">
                        <p>No rental requests yet.</p>
                        <a href="{{ path('app_car_index') }}" class="btn-primary">Browse Cars</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}