{% extends 'base.html.twig' %}

{% block title %}Contact Us | Cadu Drive{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body_full_width %}
<section class="contact-hero">
    <h1>Contact Us</h1>
    <p>Have a question or need help? Our team is here for you.</p>
</section>

<section class="contact-wrapper">
    <div class="contact-info">
        <h2>Get In Touch</h2>
        <p>We aim to respond within 24 hours.</p>

        <div class="info-item">
            <i class="fas fa-phone"></i>
            <span>+1 (555) 234-5678</span>
        </div>
        <div class="info-item">
            <i class="fas fa-envelope"></i>
            <span>support@cadudrive.com</span>
        </div>
        <div class="info-item">
            <i class="fas fa-map-marker-alt"></i>
            <span>123 Mobility Street, Accra, Ghana</span>
        </div>
    </div>

    <div class="contact-card">
        <form>
            <div class="form-group">
                <label>Name</label>
                <input type="text" placeholder="Enter your name" class="form-control">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" placeholder="Enter your email" class="form-control">
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea rows="5" placeholder="Write your message here" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn">Send Message</button>
        </form>
    </div>
</section>

 <div class="footer-wrapper">
        {% include 'home/_footer.html.twig' %}
    </div>
{% endblock %}
