{% extends 'base.html.twig' %}

{% block title %}Welcome to Cadu Drive{% endblock %}

{% block body_full_width %}
    {# Hero Section #}
    <header class="hero-section">
        <h1>Welcome to Cadu Drive</h1>
        <p class="lead">Your trusted car rental service. Drive anytime, anywhere.</p>
        <a href="{{ path('app_car_index') }}" class="btn mt-4">Browse Cars</a>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    </header>
{% endblock %}

{% block body %}

    <section class="featured-cars pt-5">
        <div class="container">
            <h2 class="text-center mb-4">Featured Cars</h2>

            {# Search / Quick Filter #}
            <form class="car-filters mb-5" method="get" action="{{ path('app_home') }}">
                <div class="flex flex-col md:flex-row items-center justify-center gap-4">
                    <div class="w-full md:w-1/3">
                        <select
                            class="form-select w-full"
                            name="car_type"
                            aria-label="Filter by car type"
                        >
                            <option value="">{{ 'All Types' }}</option>
                            {% for type in carTypes %}
                                <option value="{{ type }}" {{ type == selectedType ? 'selected' : '' }}>{{ type }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="w-full md:w-1/3">
                        <select
                            class="form-select w-full"
                            name="price_range"
                            aria-label="Filter by price range"
                            {% if priceRanges is empty %}disabled{% endif %}
                        >
                            <option value="">{{ priceRanges is empty ? 'No price data' : 'All Prices' }}</option>
                            {% for key, range in priceRanges %}
                                <option value="{{ key }}" {{ key == selectedPriceRange ? 'selected' : '' }}>
                                    {{ range.label }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="w-full md:w-auto">
                        <button type="submit" class="btn w-full">Search</button>
                    </div>
                </div>
            </form>

            <div class="car-grid">
                {% for car in cars %}
                    <div class="car-card">
                        {% if car.image %}
                            <img src="{{ asset('images/' ~ car.image) }}" alt="{{ car.make }} {{ car.model }}" class="card-img">
                        {% else %}
                            <img src="https://placehold.co/600x400/555/white?text={{ (car.make ~ ' ' ~ car.model)|url_encode }}" alt="{{ car.make }} {{ car.model }}" class="card-img">
                        {% endif %}
                        <div class="card-body">
                            <div class="card-header">
                                <h3 class="card-title">{{ car.make }} {{ car.model }}</h3>
                                <span class="card-status status-{{ car.status|lower }}">{{ car.status }}</span>
                            </div>
                            <p class="card-price">&#8369;{{ car.price }}<span>/day</span></p>
                            <div class="card-actions">
                                <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn">View Details</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <p class="text-center">No cars match your filters right now.</p>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center mt-8">
                <a href="{{ path('app_car_index') }}" class="btn btn-primary text-lg px-8 py-3">See All Cars</a>
            </div>
        </div>
    </section>

    {# Why Choose Us Section #}
    <section class="why-choose-us">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose Us</h2>
            <div class="feature-grid">
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-car-front-fill"></i></div>
                    <h5>Wide Selection</h5>
                    <p>From luxury to budget-friendly, weâ€™ve got the right ride for you.</p>
                </div>
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-cash-coin"></i></div>
                    <h5>Affordable Rates</h5>
                    <p>Transparent pricing with no hidden fees.</p>
                </div>
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-shield-check"></i></div>
                    <h5>Secure & Trusted</h5>
                    <p>Safe, verified, and trusted by thousands of customers.</p>
                </div>
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-calendar2-check-fill"></i></div>
                    <h5>Easy Booking</h5>
                    <p>Reserve your car in just a few clicks.</p>
                </div>
            </div>
        </div>
    </section>

    {# How It Works Section #}
    <section class="how-it-works">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="step-grid">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h4>Choose Your Car</h4>
                    <p>Browse our collection and find the perfect vehicle for your needs.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h4>Select Dates</h4>
                    <p>Pick your rental dates and confirm availability in real-time.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h4>Confirm & Drive</h4>
                    <p>Book online in minutes and get ready to hit the road.</p>
                </div>
            </div>
        </div>
    </section>


    {# Reusable Footer #}
    {% include 'home/_footer.html.twig' %}
{% endblock %}
