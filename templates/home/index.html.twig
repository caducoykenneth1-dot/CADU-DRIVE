{% extends 'base.html.twig' %}

{% block title %}Welcome to Cadu Drive{% endblock %}

{% block body_full_width %}
    {# Hero Section #}
    <header class="hero-section">
        <h1>Welcome to Cadu Drive</h1>
        <p class="lead">Your trusted car rental service. Drive anytime, anywhere.</p>
        <a href="{{ path('app_car_index') }}" class="btn mt-4">Browse Cars</a>
    </header>
{% endblock %}

{% block body %}

    <section class="featured-cars pt-5">
        <div class="container">
            <h2 class="text-center mb-4">Featured Cars</h2>

            {# Search / Quick Filter #}
            <form class="car-filters mb-5">
                <div class="flex flex-col md:flex-row items-center justify-center gap-4">
                    <div class="w-full md:w-1/3">
                        <select class="form-select w-full">
                            <option selected>Car Type</option>
                            <option value="1">Sedan</option>
                            <option value="2">SUV</option>
                            <option value="3">Truck</option>
                        </select>
                    </div>
                    <div class="w-full md:w-1/3">
                        <select class="form-select w-full">
                            <option selected>Price Range</option>
                            <option value="1">$50 - $100</option>
                            <option value="2">$100 - $200</option>
                            <option value="3">$200+</option>
                        </select>
                    </div>
                    <div class="w-full md:w-auto">
                        <button type="submit" class="btn w-full">Search</button>
                    </div>
                </div>
            </form>

            <div class="car-grid">
                {% for car in cars %}
                    <div class="car-card">
                        <img src="https://placehold.co/600x400/555/white?text={{ car.make|escape('url') }}" alt="{{ car.make }} {{ car.model }}" class="card-img">
                        <div class="card-body">
                            <h3 class="card-title">{{ car.make }} {{ car.model }}</h3>
                            <p class="card-text"><strong>Price:</strong> ${{ car.price }}/day</p>
                            <p class="card-text">
                                <strong>Status:</strong>
                                <span class="card-status status-{{ car.status|lower }}">{{ car.status }}</span>
                            </p>
                            <div class="card-actions">
                                <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-show">View Details</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <p class="text-center">No cars featured at the moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Why Choose Us Section #}
    <section class="why-choose-us py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose Us</h2>
            <div class="row text-center">
                <div class="col-md-3">
                    <i class="bi bi-car-front-fill" style="font-size: 3rem; color: #007bff;"></i>
                    <h4 class="mt-3">Wide Selection of Cars</h4>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-cash-coin" style="font-size: 3rem; color: #007bff;"></i>
                    <h4 class="mt-3">Affordable Rates</h4>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-shield-check" style="font-size: 3rem; color: #007bff;"></i>
                    <h4 class="mt-3">Secure & Trusted</h4>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-calendar2-check-fill" style="font-size: 3rem; color: #007bff;"></i>
                    <h4 class="mt-3">Easy Online Booking</h4>
                </div>
            </div>
        </div>
    </section>

    {# How It Works Section #}
    <section class="how-it-works py-5 bg-dark">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-number">1</div>
                        <h4 class="mt-3">Choose Your Car</h4>
                        <p>Browse our collection and find the perfect vehicle for your needs.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-number">2</div>
                        <h4 class="mt-3">Select Rental Dates</h4>
                        <p>Pick your desired dates and confirm the availability.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-number">3</div>
                        <h4 class="mt-3">Confirm & Drive</h4>
                        <p>Finalize your booking online and hit the road.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Footer #}
    <footer class="footer text-center py-4 mt-auto">
        <div class="container">
            <p class="mb-1">&copy; 2025 Cadu Drive â€” All Rights Reserved</p>
            <p class="mb-0">
                <a href="#">About</a> |
                <a href="#">Contact</a> |
                <a href="#">Privacy Policy</a>
            </p>
        </div>
    </footer>
{% endblock %}
