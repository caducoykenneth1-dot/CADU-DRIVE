{% extends 'base.html.twig' %}

{% block title %}Welcome to Cadu Drive{% endblock %}

{% block body_full_width %}
    {# Hero Section #}
    <header class="hero-section">
        <h1>Welcome to Cadu Drive</h1>
        <p class="lead">Your trusted car rental service. Drive anytime, anywhere.</p>
        <a href="{{ path('app_car_index') }}" class="btn mt-4">Browse Cars</a>
    </header>
{% endblock %}

{% block body %}

    <section class="featured-cars pt-5">
        <div class="container">
            <h2 class="text-center mb-4">Featured Cars</h2>

            {# Search / Quick Filter #}
            <form class="car-filters mb-5">
                <div class="flex flex-col md:flex-row items-center justify-center gap-4">
                    <div class="w-full md:w-1/3">
                        <select class="form-select w-full">
                            <option selected>Car Type</option>
                            <option value="1">Sedan</option>
                            <option value="2">SUV</option>
                            <option value="3">Truck</option>
                        </select>
                    </div>
                    <div class="w-full md:w-1/3">
                        <select class="form-select w-full">
                            <option selected>Price Range</option>
                            <option value="1">$50 - $100</option>
                            <option value="2">$100 - $200</option>
                            <option value="3">$200+</option>
                        </select>
                    </div>
                    <div class="w-full md:w-auto">
                        <button type="submit" class="btn w-full">Search</button>
                    </div>
                </div>
            </form>

            <div class="car-grid">
                {% for car in cars %}
                    <div class="car-card">
                        <img src="https://placehold.co/600x400/555/white?text={{ car.make|escape('url') }}" alt="{{ car.make }} {{ car.model }}" class="card-img">
                        <div class="card-body">
                            <div class="card-header">
                                <h3 class="card-title">{{ car.make }} {{ car.model }}</h3>
                                <span class="card-status status-{{ car.status|lower }}">{{ car.status }}</span>
                            </div>
                            <p class="card-price">${{ car.price }}<span>/day</span></p>
                            <div class="card-actions">
                                <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn">View Details</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <p class="text-center">No cars featured at the moment.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Why Choose Us Section #}
    <section class="why-choose-us">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose Us</h2>
            <div class="feature-grid">
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-car-front-fill"></i></div>
                    <h5>Wide Selection</h5>
                    <p>From luxury to budget-friendly, we’ve got the right ride for you.</p>
                </div>
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-cash-coin"></i></div>
                    <h5>Affordable Rates</h5>
                    <p>Transparent pricing with no hidden fees.</p>
                </div>
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-shield-check"></i></div>
                    <h5>Secure & Trusted</h5>
                    <p>Safe, verified, and trusted by thousands of customers.</p>
                </div>
                <div class="feature-card">
                    <div class="icon"><i class="bi bi-calendar2-check-fill"></i></div>
                    <h5>Easy Booking</h5>
                    <p>Reserve your car in just a few clicks.</p>
                </div>
            </div>
        </div>
    </section>

    {# How It Works Section #}
    <section class="how-it-works">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="step-grid">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h4>Choose Your Car</h4>
                    <p>Browse our collection and find the perfect vehicle for your needs.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h4>Select Dates</h4>
                    <p>Pick your rental dates and confirm availability in real-time.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h4>Confirm & Drive</h4>
                    <p>Book online in minutes and get ready to hit the road.</p>
                </div>
            </div>
        </div>
    </section>

    {# Footer #}
    <footer class="footer text-center py-4 mt-auto">
        <div class="container">
            <p class="mb-1">&copy; 2025 Cadu Drive — All Rights Reserved</p>
            <p class="mb-0">
                <a href="#" class="text-white text-decoration-none mx-1">About</a> | {# You can create an 'app_about' route for this #}
                <a href="{{ path('app_contact') }}" class="text-white text-decoration-none mx-1">Contact</a> |
                <a href="#" class="text-white text-decoration-none mx-1">Privacy Policy</a> {# And an 'app_privacy' route for this #}
            </p>
        </div>
    </footer>

    {# Reusable Footer #}
    {% include 'home/_footer.html.twig' %}
{% endblock %}