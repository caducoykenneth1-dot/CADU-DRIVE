{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Create Account - Car Rental{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .registration-container {
            min-height: calc(100vh - 76px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }
        
        .registration-wrapper {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
        }
        
        .registration-card {
            border: none;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            background: white;
        }
        
        .registration-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
        
        .registration-header {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .registration-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }
        
        .registration-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -30%;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }
        
        .registration-logo {
            width: 70px;
            height: 70px;
            background: white;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: #3b82f6;
            font-size: 28px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
            position: relative;
            z-index: 1;
            transition: transform 0.3s ease;
        }
        
        .registration-card:hover .registration-logo {
            transform: scale(1.05);
        }
        
        .registration-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 1;
        }
        
        .registration-header p {
            font-size: 0.95rem;
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }
        
        .card-body {
            padding: 2.5rem;
        }
        
        @media (max-width: 576px) {
            .card-body {
                padding: 2rem 1.5rem;
            }
            
            .registration-header {
                padding: 1.75rem 1.5rem;
            }
            
            .registration-header h1 {
                font-size: 1.5rem;
            }
        }
        
        @media (max-width: 400px) {
            .card-body {
                padding: 1.75rem 1.25rem;
            }
            
            .registration-header {
                padding: 1.5rem 1.25rem;
            }
            
            .registration-logo {
                width: 60px;
                height: 60px;
                font-size: 24px;
            }
        }
        
        .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            padding: 14px 16px;
            transition: all 0.3s;
            font-size: 15px;
            height: auto;
        }
        
        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }
        
        .form-floating > label {
            padding: 0.9rem 0.75rem;
            font-size: 15px;
        }
        
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            transform: scale(0.85) translateY(-0.75rem) translateX(0.15rem);
            opacity: 0.8;
        }
        
        .form-control.is-invalid {
            border-color: #ef4444;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23ef4444'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23ef4444' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .form-control.is-valid {
            border-color: #10b981;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%2310b981' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .invalid-feedback, .valid-feedback {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }
        
        .password-strength {
            margin-top: 0.5rem;
        }
        
        .strength-meter {
            height: 6px;
            background: #e5e7eb;
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.25rem;
        }
        
        .strength-meter-fill {
            height: 100%;
            width: 0%;
            border-radius: 3px;
            transition: width 0.3s ease, background 0.3s ease;
        }
        
        .strength-text {
            font-size: 0.8rem;
            color: #6b7280;
        }
        
        .btn-register {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            border: none;
            border-radius: 10px;
            padding: 16px;
            font-weight: 600;
            font-size: 16px;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            width: 100%;
        }
        
        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
        }
        
        .btn-register:active {
            transform: translateY(0);
        }
        
        .form-check-input {
            width: 20px;
            height: 20px;
            margin-top: 0.25rem;
            border: 2px solid #d1d5db;
            cursor: pointer;
        }
        
        .form-check-input:checked {
            background-color: #3b82f6;
            border-color: #3b82f6;
        }
        
        .form-check-label {
            cursor: pointer;
            user-select: none;
        }
        
        .terms-link {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 500;
        }
        
        .terms-link:hover {
            text-decoration: underline;
        }
        
        .login-link {
            color: #3b82f6;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: all 0.2s;
        }
        
        .login-link:hover {
            text-decoration: underline;
            gap: 8px;
        }
        
        .step-indicator {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
            gap: 8px;
        }
        
        .step {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #e5e7eb;
            transition: all 0.3s;
        }
        
        .step.active {
            background: #3b82f6;
            transform: scale(1.2);
        }
        
        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6b7280;
            cursor: pointer;
            z-index: 5;
            padding: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .password-toggle:hover {
            color: #374151;
        }
        
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 1.5rem 0;
        }
        
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .divider span {
            padding: 0 15px;
            color: #6b7280;
            font-size: 14px;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .registration-container {
                padding: 15px;
                min-height: calc(100vh - 70px);
            }
            
            .registration-wrapper {
                max-width: 450px;
            }
            
            .registration-header {
                padding: 1.75rem;
            }
            
            .registration-logo {
                width: 65px;
                height: 65px;
                font-size: 26px;
            }
            
            .card-body {
                padding: 2rem;
            }
        }
        
        @media (max-width: 576px) {
            .registration-wrapper {
                max-width: 100%;
            }
            
            .card-body {
                padding: 1.75rem;
            }
            
            .form-control {
                padding: 13px 15px;
            }
            
            .btn-register {
                padding: 15px;
            }
        }
        
        @media (max-width: 400px) {
            .card-body {
                padding: 1.5rem;
            }
            
            .registration-header {
                padding: 1.5rem;
            }
            
