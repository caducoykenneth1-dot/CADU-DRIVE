{% extends 'base.html.twig' %}

{% block title %}Request to Rent {{ car.make }} {{ car.model }}{% endblock %}

{% block body %}
<div class="rental-request-container">
    <div class="rental-header">
        <h1>Request to Rent</h1>
        <p class="subtitle">{{ car.make }} {{ car.model }} â€¢ {{ car.year }}</p>
    </div>

    <div class="rental-card">
        <div class="info-section">
            <h3>Your Information</h3>
            <div class="user-info">
                <div class="info-item">
                    <span class="label">Name:</span>
                    <span class="value">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                </div>
                <div class="info-item">
                    <span class="label">Email:</span>
                    <span class="value">{{ app.user.email }}</span>
                </div>
            </div>
        </div>

        <div class="info-section">
            <h3>Vehicle Details</h3>
            <div class="car-info">
                <div class="info-item">
                    <span class="label">Vehicle:</span>
                    <span class="value">{{ car.make }} {{ car.model }}</span>
                </div>
                <div class="info-item">
                    <span class="label">Year:</span>
                    <span class="value">{{ car.year }}</span>
                </div>
                <div class="info-item">
                    <span class="label">Daily Rate:</span>
                    <span class="value price">&#8369;{{ car.price|number_format(0, '.', ',') }}</span>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h3>Rental Period</h3>
            {{ form_start(form) }}
            
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.startDate) }}
                    {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.endDate) }}
                    {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.notes) }}
                {{ form_widget(form.notes, {'attr': {
                    'class': 'form-control',
                    'rows': 3,
                    'placeholder': 'Any special requests or notes...'
                }}) }}
                <small class="form-hint">Optional</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    Submit Request
                </button>
                <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn-secondary">
                    Cancel
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>

        <div class="note-box">
            <p>This is a rental request. Staff will verify availability and contact you within 24 hours to confirm.</p>
        </div>
    </div>
</div>

<style>
.rental-request-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
}

.rental-header {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eaeaea;
}

.rental-header h1 {
    font-size: 2rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: white;
}

.rental-header .subtitle {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
}

.rental-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    padding: 2rem;
}

.info-section {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #f0f0f0;
}

.info-section:last-of-type {
    border-bottom: none;
}

.info-section h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: #333;
}

.user-info, .car-info {
    display: grid;
    gap: 0.75rem;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
}

.info-item .label {
    font-weight: 500;
    color: #555;
}

.info-item .value {
    color: #1a1a1a;
    font-weight: 500;
}

.info-item .price {
    color: #2e7d32;
    font-weight: 600;
}

.form-section {
    margin: 2rem 0;
}

.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #333;
    font-size: 0.95rem;
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    transition: border-color 0.2s;
    box-sizing: border-box;
}

.form-control:focus {
    outline: none;
    border-color: #4a6cf7;
    box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.1);
}

textarea.form-control {
    resize: vertical;
    min-height: 100px;
}

.form-hint {
    display: block;
    margin-top: 0.375rem;
    font-size: 0.875rem;
    color: #666;
}

.form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eaeaea;
}

.btn-primary, .btn-secondary {
    padding: 0.875rem 1.75rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    border: none;
}

.btn-primary {
    background: #4a6cf7;
    color: white;
    flex: 1;
}

.btn-primary:hover {
    background: #3a5ce5;
    transform: translateY(-1px);
}

.btn-secondary {
    background: #f5f5f5;
    color: black !important;
    border: 1px solid #ddd;
    flex: 0.5;
}

.btn-secondary:hover {
    background: #eaeaea;
    color: black !important;
}

.note-box {
    margin-top: 2rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #4a6cf7;
}

.note-box p {
    margin: 0;
    color: #555;
    font-size: 0.95rem;
    line-height: 1.5;
}

/* Date input styling */
input[type="date"] {
    appearance: none;
    background: white;
    font-family: inherit;
    color: black;
}

/* Remove default form styling */
form .form-group:last-child {
    margin-bottom: 0;
}
</style>
{% endblock %}