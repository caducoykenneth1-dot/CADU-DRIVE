{% extends 'base.html.twig' %}

{% block title %}Change Password - Staff{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .password-change-container {
            max-width: 550px;
            margin: 0 auto;
            padding: 2.5rem 1.5rem;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            color: #1a1a1a;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #6b7280;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 1.5rem;
            transition: color 0.15s ease;
        }
        
        .back-link:hover {
            color: #1a1a1a;
        }
        
        .back-link i {
            font-size: 1rem;
        }
        
        .page-header {
            margin-bottom: 2rem;
            text-align: center;
        }
        
        .page-header-icon {
            width: 56px;
            height: 56px;
            background: #eff6ff;
            color: #3b82f6;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 1rem auto;
        }
        
        .page-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #1a1a1a;
            margin: 0 0 0.25rem 0;
            letter-spacing: -0.02em;
        }
        
        .page-subtitle {
            color: #6b7280;
            font-size: 0.9375rem;
            font-weight: 400;
            margin: 0;
        }
        
        .form-card {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .form-section {
            padding: 2rem;
        }
        
        .alert {
            border-radius: 8px;
            padding: 0.875rem 1rem;
            margin-bottom: 1.5rem;
            font-weight: 400;
            font-size: 0.875rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid;
        }
        
        .alert-success {
            background: #ecfdf5;
            color: #065f46;
            border-color: #a7f3d0;
        }
        
        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
            border-color: #fecaca;
        }
        
        .btn-close {
            background: transparent;
            border: none;
            font-size: 1.125rem;
            color: inherit;
            cursor: pointer;
            opacity: 0.5;
            transition: opacity 0.15s ease;
            padding: 0;
            line-height: 1;
        }
        
        .btn-close:hover {
            opacity: 1;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-group label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.5rem;
        }
        
        .form-group input[type="password"] {
            width: 100%;
            padding: 0.625rem 0.875rem;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 0.9375rem;
            color: #1a1a1a;
            transition: all 0.15s ease;
            background: white;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }
        
        .form-help {
            font-size: 0.8125rem;
            color: #6b7280;
            margin-top: 0.375rem;
        }
        
        .form-errors {
            font-size: 0.8125rem;
            color: #dc2626;
            margin-top: 0.375rem;
        }
        
        .form-errors ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .form-errors li {
            margin-bottom: 0.25rem;
        }
        
        .security-tips {
            background: #fafafa;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .security-tips-title {
            font-size: 0.8125rem;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .security-tips-title i {
            color: #3b82f6;
        }
        
        .security-tips ul {
            list-style: none;
            padding: 0;
            margin: 0;
            font-size: 0.8125rem;
            color: #6b7280;
            line-height: 1.6;
        }
        
        .security-tips li {
            padding-left: 1.25rem;
            position: relative;
            margin-bottom: 0.25rem;
        }
        
        .security-tips li:before {
            content: "•";
            position: absolute;
            left: 0.5rem;
            color: #9ca3af;
        }
        
        .form-actions {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            padding: 1.5rem 2rem;
            background: #fafafa;
            border-top: 1px solid #e5e7eb;
        }
        
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.625rem 1.25rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 500;
            text-decoration: none;
            border: 1px solid;
            transition: all 0.15s ease;
            cursor: pointer;
            white-space: nowrap;
        }
        
        .btn-primary {
            background: #3b82f6;
            color: white;
            border-color: #3b82f6;
        }
        
        .btn-primary:hover {
            background: #2563eb;
            border-color: #2563eb;
            transform: translateY(-1px);
        }
        
        .btn-secondary {
            background: white;
            color: #374151;
            border-color: #d1d5db;
        }
        
        .btn-secondary:hover {
            background: #f9fafb;
            border-color: #9ca3af;
        }
        
        .btn i {
            font-size: 1rem;
        }
        
        @media (max-width: 768px) {
            .password-change-container {
                padding: 1.5rem 1rem;
            }
            
            .page-header h1 {
                font-size: 1.5rem;
            }
            
            .form-section {
                padding: 1.5rem;
            }
            
            .form-actions {
                padding: 1.25rem 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="password-change-container">
    <a href="{{ path('app_staff_profile') }}" class="back-link">
        <i class="bi bi-arrow-left"></i>
        Back to Profile
    </a>
    
    <header class="page-header">
        <div class="page-header-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <h1 style="color: white;">Change Password</h1>
        <p class="page-subtitle">Update your account security</p>
    </header>
    
    <div class="form-card">
        <div class="form-section">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">×</button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">×</button>
                </div>
            {% endfor %}
            
            <div class="security-tips">
                <div class="security-tips-title">
                    <i class="bi bi-lightbulb"></i>
                    Password Guidelines
                </div>
                <ul>
                    <li>Use at least 8 characters</li>
                    <li>Include uppercase and lowercase letters</li>
                    <li>Add numbers and special characters</li>
                    <li>Avoid common words or personal information</li>
                </ul>
            </div>
            
            {{ form_start(form) }}
            
            <div class="form-group">
                {{ form_label(form.currentPassword) }}
                {{ form_widget(form.currentPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter your current password'
                    }
                }) }}
                {% if form.currentPassword.vars.errors|length > 0 %}
                    <div class="form-errors">
                        {{ form_errors(form.currentPassword) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="form-group">
                {{ form_label(form.newPassword) }}
                {{ form_widget(form.newPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter new password (min 8 characters)'
                    }
                }) }}
                {% if form.newPassword.vars.errors|length > 0 %}
                    <div class="form-errors">
                        {{ form_errors(form.newPassword) }}
                    </div>
                {% endif %}
            </div>
            
            <div class="form-group">
                {{ form_label(form.confirmPassword) }}
                {{ form_widget(form.confirmPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Confirm new password'
                    }
                }) }}
                {% if form.confirmPassword.vars.errors|length > 0 %}
                    <div class="form-errors">
                        {{ form_errors(form.confirmPassword) }}
                    </div>
                {% endif %}
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i>
                Update Password
            </button>
            <a href="{{ path('app_staff_profile') }}" class="btn btn-secondary" style="color: black !important;">
                <i class="bi bi-x-lg"></i>
                Cancel
            </a>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}