{% endblock %}
{% block admin_content %}
<div class="rental-requests-container" role="main" aria-label="Rental Requests Management">
    <header class="page-header">
        <h1>Rental Requests</h1>
        <p class="page-subtitle">Manage customer rental submissions</p>
    </header>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert" aria-live="polite">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">√ó</button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-error alert-dismissible fade show" role="alert" aria-live="assertive">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">√ó</button>
        </div>
    {% endfor %}
    
    <section class="requests-section" aria-labelledby="pending-requests-header">
        <div class="section-header">
            <h2 id="pending-requests-header" style="color: black">Pending Review</h2>
            <span class="badge" aria-label="{{ pendingRequests|length }} pending requests">{{ pendingRequests|length }}</span>
        </div>
        {% if pendingRequests|length > 0 %}
            <div class="requests-table">
                <table>
                    <thead>
                    <tr>
                        <th scope="col">Request</th>
                        <th scope="col">Customer</th>
                        <th scope="col">Vehicle</th>
                        <th scope="col">Dates</th>
                        <th scope="col">Total</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for request in pendingRequests %}
                        <tr>
                            <td class="request-id">#{{ request.id }}</td>
                            <td>
                                {% if request.customer %}
                                    <div class="customer-name">{{ request.customer.firstName ~ ' ' ~ request.customer.lastName | trim ?: request.customer.email }}</div>
                                    <small class="customer-email">{{ request.customer.email }}</small>
                                {% else %}
                                    <span class="text-muted">No customer</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if request.car %}
                                    <div class="vehicle-name">{{ request.car.make }} {{ request.car.model }}</div>
                                    {% if request.car.year %}
                                        <small class="vehicle-year">{{ request.car.year }}</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">No vehicle</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="date-range">{{ request.startDate|date('M d, Y') }} ‚Äì {{ request.endDate|date('M d, Y') }}</div>
                                {% set daysDifference = date(request.endDate).diff(date(request.startDate)).days %}
                                <small class="date-days">{{ daysDifference }} day{% if daysDifference != 1 %}s{% endif %}</small>
                            </td>
                            <td>
                                {% if request.car and request.startDate and request.endDate %}
                                    {% set totalDays = daysDifference + 1 %}
                                    {% set dailyRate = request.car.dailyRate|default(0) %}
                                    {% set calculatedTotal = totalDays * dailyRate %}
                                    <div class="price-total">‚Ç±{{ calculatedTotal|number_format(2) }}</div>
                                    <small class="text-muted">{{ totalDays }} day{% if totalDays != 1 %}s{% endif %} √ó ‚Ç±{{ dailyRate|number_format(2) }}/day</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="status-badge status-pending">Pending</span>
                            </td>
                            <td>
                                <div class="action-buttons" role="group" aria-label="Actions for rental request #{{ request.id }}">
                                    <a href="{{ path('app_staff_rental_request_show', {'id': request.id}) }}" class="btn-view" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_rental_request_edit', {'id': request.id}) }}" class="btn-edit" title="Edit Request">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="{{ path('app_rental_request_approve', {'id': request.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Approve rental request #{{ request.id }}?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ request.id) }}">
                                        <button type="submit" class="btn-approve" title="Approve Request">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    <form action="{{ path('app_rental_request_reject', {'id': request.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Reject rental request #{{ request.id }}?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ request.id) }}">
                                        <button type="submit" class="btn-reject" title="Reject Request">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                    <form action="{{ path('app_staff_rental_request_delete', {'id': request.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Delete rental request #{{ request.id }}?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn-delete" title="Delete Request">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-icon">üì≠</div>
                <p>No pending rental requests</p>
            </div>
        {% endif %}
    </section>
    
