                            </td>
                            <td>
                                <span class="status-badge status-rejected">Rejected</span>
                            </td>
                            <td>
                                {% if request.rejectedAt %}
                                    <div class="submitted-date">{{ request.rejectedAt|date('M d, Y') }}</div>
                                    <small class="submitted-time">{{ request.rejectedAt|date('h:i A') }}</small>
                                {% else %}
                                    <span class="text-muted">N/A</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="{{ path('app_staff_rental_request_show', {'id': request.id}) }}" class="btn-view" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    
                                    <form action="{{ path('app_staff_rental_request_delete', {'id': request.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Delete rental request #{{ request.id }}?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ request.id) }}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn-delete" title="Delete Request">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-icon">‚ùå</div>
                <p>No rejected requests</p>
            </div>
        {% endif %}
    </section>
</div>
{% endblock %}

