{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Staff Member{% endblock %}

{% block admin_content %}
    <div class="page-header" style="margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 2px solid #e2e8f0;">
        <h1 style="margin: 0; display: flex; align-items: center; gap: 0.75rem; color: #1e293b;">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#1e293b" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
            </svg>
            Edit Staff Member
        </h1>
        <div style="margin-top: 0.5rem; display: flex; align-items: center; gap: 0.5rem; color: #64748b;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#64748b" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 16v-4M12 8h.01"/>
            </svg>
            ID: <code style="background: #f1f5f9; color: #475569; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.85rem; border: 1px solid #e2e8f0;">{{ staff.id }}</code>
        </div>
    </div>

    <div style="max-width: 800px; margin: 0 auto;">
        <!-- Staff Info Summary -->
        <div style="background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px; padding: 1.5rem; margin-bottom: 2rem;">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                <div style="width: 48px; height: 48px; background: #e0f2fe; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#0284c7" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                </div>
                <div>
                    <h3 style="margin: 0; color: #1e293b; font-size: 1.25rem;">{{ staff.firstName }} {{ staff.lastName }}</h3>
                    <p style="margin: 0.25rem 0 0 0; color: #64748b;">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: text-bottom; margin-right: 0.25rem;">
                            <rect x="2" y="4" width="20" height="16" rx="2"/>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                        </svg>
                        {{ staff.email }}
                    </p>
                </div>
            </div>
            
            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                {% for role in staff.roles %}
                    <span style="display: inline-flex; align-items: center; gap: 0.5rem; background: white; border: 1px solid #e2e8f0; padding: 0.375rem 0.75rem; border-radius: 20px; font-size: 0.875rem; font-weight: 500; color: #475569;">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            {% if role == 'ROLE_ADMIN' %}
                                <circle cx="12" cy="12" r="10"/>
                                <path d="m9 12 2 2 4-4"/>
                            {% else %}
                                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            {% endif %}
                        </svg>
                        {{ role|replace({'ROLE_': ''})|title }}
                    </span>
                {% endfor %}
            </div>
        </div>

        <!-- Edit Form -->
        <div class="form-container" style="margin-bottom: 2rem;">
            <div style="margin-bottom: 1.5rem;">
                <h3 style="margin: 0 0 1rem 0; color: #475569; font-size: 1rem; display: flex; align-items: center; gap: 0.5rem;">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#475569" stroke-width="2">
                        <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"/>
                    </svg>
                    Edit Information
                </h3>
                <p style="margin: 0; color: #64748b; font-size: 0.875rem;">
                    Update the staff member's details below. All fields are required unless marked optional.
                </p>
            </div>

            {{ include('staff_crud/_form.html.twig', {'button_label': 'Update Staff'}) }}
        </div>

        <!-- Action Buttons -->
        <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 1.5rem; border-top: 1px solid #e2e8f0;">
            <div>
                <a href="{{ path('app_staff_crud_index') }}" class="btn btn-secondary" style="display: inline-flex; align-items: center; gap: 0.5rem;">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 12H5M12 19l-7-7 7-7"/>
                    </svg>
                    Back to Staff List
                </a>
                
                <a href="{{ path('app_staff_crud_show', {'id': staff.id}) }}" class="btn btn-secondary" style="display: inline-flex; align-items: center; gap: 0.5rem; margin-left: 0.5rem;">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                        <circle cx="12" cy="12" r="3"/>
                    </svg>
                    View Details
                </a>
            </div>
            
            <div>
                {{ include('staff_crud/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}